[colors]
;background = ${xrdb:color0:#222}
background = #3E424D
background-alt = #282C34
;foreground = ${xrdb:color7:#222}
foreground = #ffffff
foreground-alt = #abb2bf
primary = #5294e2
secondary = #e60053
alert = #bd2c40

[bar/primary]
monitor = ${env:MONITOR}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = DejaVu Sans:pixelsize=9;3
font-1 = Font Awesome 5 Free:pixelsize=9;3
font-2 = Font Awesome 5 Free Solid:pixelsize=9;3
font-3 = Font Awesome 5 Brands:pixelsize=9;3
font-4 = Symbola:pixelsize=9;3

modules-left = i3
modules-center = xwindow
modules-right = bandwidth memory cpu load battery volume zec monero date

tray-position = right
tray-detached = false
tray-padding = 2
tray-transparent = false
tray-background = ${colors.background}

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/secondary]
inherit = bar/primary
tray-position =

[module/xwindow]
type = internal/xwindow
format-prefix = "Ôãí "
label = "%title:0:40:...%"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%

label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-overline = ${self.label-focused-overline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ÔèΩ "
label = %percentage:2%%

[module/load]
type = custom/script
interval = 10
exec = ~/.config/polybar/scripts/load_average

format-prefix = "ÔàÅ "

[module/memory]
type = internal/memory
interval = 10
format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.foreground}
label = %gb_used%

[module/date]
type = internal/date
interval = 5

date =
date-alt = "(%a, %d %b)"

time = %H:%M
time-alt = "%H:%M "

label = %time% %date%

format = "ÔÄó <label>"
format-foreground = ${colors.foreground}


[module/volume]
type = internal/alsa

format = <ramp-volume> <value>
format-volume = <ramp-volume> <label-volume>
value =  %percentage%%

ramp-volume-0 = "ÔÄ¶ "
ramp-volume-1 = "ÔÄß "
ramp-volume-2 = "ÔÄ® "

format-muted-prefix = "üîá "
label-muted = MUTED

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
poll-interval = 10
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%% (%time%)

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% %time% %consumption%W

format-full-prefix = "Ôá¶ "
label-full = %percentage%%

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-framerate = 1000

[module/zec]
type = custom/script
exec = ~/.config/polybar/scripts/kraken.py zeceur
interval = 60

format = <label>
format-prefix = "Ôèë "
label = %output:3%

click-left = firefox https://cryptowat.ch/markets/kraken/zec/eur

[module/monero]
type = custom/script
exec = ~/.config/polybar/scripts/kraken.py xmreur
interval = 60

format = <label>
format-prefix = "Ôèê "
label = %output:3%

click-left = firefox https://cryptowat.ch/markets/kraken/xmr/eur

[module/bandwidth]
type = custom/script
exec = ~/.config/polybar/scripts/bandwidth
tail = true
click-left = kill -USR1 %pid%

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

